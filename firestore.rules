rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && getUserData().role == 'superadmin';
    }
    
    function isHospitalAdmin() {
      return isAuthenticated() && getUserData().role == 'admin';
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && (request.auth.uid == userId || isSuperAdmin());
    }

    // Hospitals Collection
    match /hospitals/{hospitalId} {
      allow read: if true; // Publicly searchable
      allow create: if isSuperAdmin();
      allow update, delete: if isSuperAdmin();
      
      // Inventory Sub-collection
      match /inventory/{type} {
        allow read: if true;
        allow write: if isHospitalAdmin() && request.auth.uid == hospitalId;
      }
    }

    // Blood Requests Collection
    match /blood_requests/{requestId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isHospitalAdmin() || isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    // Notifications Collection
    match /notifications/{notifId} {
      allow read: if isAuthenticated() && request.auth.uid == resource.data.userId;
      allow create: if isHospitalAdmin() || isSuperAdmin();
      allow update: if isAuthenticated() && request.auth.uid == resource.data.userId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isRead']);
      allow delete: if false;
    }
  }
}
